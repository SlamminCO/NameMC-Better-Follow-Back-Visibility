{
    "manifest_version": 3,
    "name": "NameMC Better Follow Back Visibility",
    "version": "1.4",
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
        {
          "matches": ["https://namemc.com/profile/*/following*"],
          "js": ["content.js"],
          "css": ["content.css"]
        }
    ],
    "permissions": [
      "activeTab",
      "storage"
    ]
}
